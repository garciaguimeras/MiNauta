<resources
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimary">@color/widget</item>
        <item name="android:textColor">@color/widget</item>

        <item name="android:statusBarColor" tools:targetApi="21">@color/nautaOrange</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/nautaOrange</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RoundButton" parent="Widget.AppCompat.Button">
        <item name="backgroundColor">@color/round_button_background</item>
    </style>

    <style name="RoundImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="backgroundColor">@color/round_button_background</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
